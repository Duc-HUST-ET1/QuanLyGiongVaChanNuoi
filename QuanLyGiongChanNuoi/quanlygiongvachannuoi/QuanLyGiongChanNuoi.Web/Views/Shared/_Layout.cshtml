<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - QuanLyGiongChanNuoi.Web</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/QuanLyGiongChanNuoi.Web.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <style>
        /* CSS tuỳ chỉnh cho giao diện Admin */
        body {
            font-size: .875rem;
            overflow-x: hidden; /* Ẩn thanh cuộn ngang */
        }

        /* 1. SIDEBAR (Cột trái) */
        .sidebar {
            position: fixed;
            top: 0;
            bottom: 0;
            left: 0;
            z-index: 100; /* Nằm dưới Navbar một chút nếu cần */
            padding: 48px 0 0; /* Padding top để tránh bị Navbar che mất */
            box-shadow: inset -1px 0 0 rgba(0, 0, 0, .1);
            background-color: #f8f9fa; /* Màu nền xám nhạt */
        }

        .sidebar-sticky {
            position: relative;
            top: 0;
            height: calc(100vh - 48px);
            padding-top: .5rem;
            overflow-x: hidden;
            overflow-y: auto; /* Cho phép cuộn dọc nếu menu dài */
        }

        /* Link trong Sidebar */
        .sidebar .nav-link {
            font-weight: 500;
            color: #333;
            padding: 10px 15px;
            display: flex;
            align-items: center;
        }

            .sidebar .nav-link:hover {
                color: #007bff; /* Màu xanh khi di chuột */
                background-color: #e9ecef;
            }

            .sidebar .nav-link.active {
                color: #007bff;
                background-color: #e9ecef; /* Nền sáng cho item đang chọn */
            }

            .sidebar .nav-link i {
                width: 24px; /* Căn chỉnh icon cho thẳng hàng */
                text-align: center;
                margin-right: 8px;
            }

        /* Submenu (Menu con thụt vào) */
        .submenu .nav-link {
            padding-left: 45px; /* Thụt đầu dòng */
            font-size: 0.9em;
            color: #666;
        }

        /* 2. NAVBAR (Thanh trên cùng) */
        .navbar-brand {
            padding-top: .75rem;
            padding-bottom: .75rem;
            font-size: 1rem;
            background-color: rgba(0, 0, 0, .25);
            box-shadow: inset -1px 0 0 rgba(0, 0, 0, .25);
        }

        .navbar .navbar-toggler {
            top: .25rem;
            right: 1rem;
        }

        /* 3. MAIN CONTENT (Nội dung chính) */
        main {
            padding-top: 20px;
        }
    </style>
</head>
<body>
    <header class="navbar navbar-dark sticky-top bg-dark flex-md-nowrap p-0 shadow">
        <a class="navbar-brand col-md-3 col-lg-2 me-0 px-3" href="#">QL GIỐNG CHĂN NUÔI</a>

        <button class="navbar-toggler position-absolute d-md-none collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#sidebarMenu" aria-controls="sidebarMenu" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        @if (User.Identity.IsAuthenticated)
    {
        <div class="navbar-nav w-100">
            <div class="nav-item text-nowrap d-flex justify-content-end px-3">
                <a class="nav-link px-3" href="#">Xin chào, <strong>@User.Identity?.Name</strong></a>
                <a class="nav-link px-3" asp-controller="Account" asp-action="Logout">
                    <i class="fa-solid fa-sign-out-alt"></i> Đăng xuất
                </a>
            </div>
        </div>
    }

    </header>

    <div class="container-fluid">
        <div class="row">

            <nav id="sidebarMenu" class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse">
                <div class="sidebar-sticky pt-3">
                    <ul class="nav flex-column">

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">
                                <i class="fa-solid fa-house"></i> Trang chủ
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Menu" asp-action="Index">
                                <i class="fa-solid fa-bars"></i> Quản lý Menu
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link collapsed" href="#submenuSystem" data-bs-toggle="collapse">
                                <i class="fa-solid fa-gear"></i>
                                Hệ Thống
                                <i class="fa-solid fa-chevron-down ms-auto" style="font-size: 0.7em;"></i>
                            </a>
                            <div class="collapse submenu" id="submenuSystem">
                                <ul class="nav flex-column">
                                    <li class="nav-item"><a class="nav-link" asp-controller="NguoiDung" asp-action="Index">Quyền người dùng</a></li>
                                    <li class="nav-item"><a class="nav-link" asp-controller="QuanLyQuyen" asp-action="Index">Định nghĩa Quyền</a></li>
                                    <li class="nav-item"><a class="nav-link" asp-controller="Nhom" asp-action="Index">Quyền nhóm người dùng</a></li>
                                </ul>
                            </div>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link collapsed" href="#submenuAdmin" data-bs-toggle="collapse">
                                <i class="fa-solid fa-building-columns"></i>
                                Đơn vị hành chính
                                <i class="fa-solid fa-chevron-down ms-auto" style="font-size: 0.7em;"></i>
                            </a>
                            <div class="collapse submenu" id="submenuAdmin">
                                <ul class="nav flex-column">
                                    <li class="nav-item"><a class="nav-link" asp-controller="DonViHcHuyen" asp-action="Index">Đơn vị cấp Huyện</a></li>
                                    <li class="nav-item"><a class="nav-link" asp-controller="DonViHcXa" asp-action="Index">Đơn vị cấp Xã</a></li>
                                </ul>
                            </div>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link collapsed" href="#submenuHistory" data-bs-toggle="collapse">
                                <i class="fa-solid fa-clock-rotate-left"></i>
                                Lịch sử
                                <i class="fa-solid fa-chevron-down ms-auto" style="font-size: 0.7em;"></i>
                            </a>
                            <div class="collapse submenu" id="submenuHistory">
                                <ul class="nav flex-column">
                                    <li class="nav-item">
                                        <a class="nav-link" asp-controller="LichSuTruyCap" asp-action="Index">Lịch sử truy cập</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" asp-controller="LichSuTacDong" asp-action="Index">Lịch sử tác động</a>
                                    </li>
                                </ul>
                            </div>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark d-flex justify-content-between align-items-center" data-bs-toggle="collapse" href="#collapseQuanTriGiong" role="button" aria-expanded="false">
                                <span>
                                    <i class="fas fa-paw me-2"></i>Giống
                                </span>
                                <i class="fas fa-chevron-down" style="font-size: 0.8rem;"></i>
                            </a>

                            <div class="collapse" id="collapseQuanTriGiong">
                                <ul class="nav flex-column ms-4">
                                    <li class="nav-item">
                                        <a class="nav-link text-secondary py-1" asp-controller="GiongVatNuoi" asp-action="Index">
                                            <i class="fas fa-list-ul me-2"></i> DS Giống vật nuôi
                                        </a>
                                    </li>

                                    <li class="nav-item">
                                        <a class="nav-link text-secondary py-1" asp-controller="ToChucCaNhan" asp-action="Index">
                                            <i class="fas fa-users me-2"></i> Tổ chức / Cá nhân
                                        </a>
                                    </li>

                                    <li class="nav-item">
                                        <a class="nav-link text-secondary py-1" asp-controller="CoSoKhaoNghiem" asp-action="Index">
                                            <i class="fas fa-flask me-2"></i> Cơ sở Khảo nghiệm
                                        </a>
                                    </li>

                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="GiongCanBaoTon" asp-action="Index">
                                            <i class="fas fa-shield-alt me-2 text-success"></i> Giống cần Bảo tồn
                                        </a>
                                    </li>

                                    <li class="nav-item">
                                        <a class="nav-link text-secondary py-1" asp-controller="GiongCamXuatKhau" asp-action="Index">
                                            <i class="fas fa-ban me-2 text-danger"></i> Giống Cấm xuất khẩu
                                        </a>
                                    </li>

                                </ul>
                            </div>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark d-flex justify-content-between align-items-center" data-bs-toggle="collapse" href="#collapseNguonGen" role="button" aria-expanded="false">
                                <span>
                                    <i class="fas fa-dna me-2"></i>Nguồn Gen
                                </span>
                                <i class="fas fa-chevron-down" style="font-size: 0.8rem;"></i>
                            </a>

                            <div class="collapse" id="collapseNguonGen">
                                <ul class="nav flex-column ms-4">
                                    <li class="nav-item">
                                        <a class="nav-link text-secondary py-1" asp-controller="ToChucNguonGen" asp-action="Index" asp-route-loaiHoatDong="Thu thập">
                                            Thu thập nguồn gen
                                        </a>
                                    </li>

                                    <li class="nav-item">
                                        <a class="nav-link text-secondary py-1" asp-controller="ToChucNguonGen" asp-action="Index" asp-route-loaiHoatDong="Bảo tồn">
                                            Bảo tồn nguồn gen
                                        </a>
                                    </li>

                                    <li class="nav-item">
                                        <a class="nav-link text-secondary py-1" asp-controller="ToChucNguonGen" asp-action="Index" asp-route-loaiHoatDong="Khai thác">
                                            Khai thác & Phát triển
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark d-flex justify-content-between align-items-center" data-bs-toggle="collapse" href="#collapseThucAn" role="button" aria-expanded="false">
                                <span>
                                    <i class="fas fa-warehouse me-2"></i>Cơ sở Thức ăn
                                </span>
                                <i class="fas fa-chevron-down" style="font-size: 0.8rem;"></i>
                            </a>

                            <div class="collapse" id="collapseThucAn">
                                <ul class="nav flex-column ms-4">
                                    <li class="nav-item">
                                        <a class="nav-link text-secondary py-1" asp-controller="CoSoThucAn" asp-action="Index" asp-route-loaiHinh="Sản xuất">
                                            Cơ sở Sản xuất
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-secondary py-1" asp-controller="CoSoThucAn" asp-action="Index" asp-route-loaiHinh="Mua bán">
                                            Cơ sở Mua bán
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-secondary py-1" asp-controller="CoSoThucAn" asp-action="Index" asp-route-loaiHinh="Khảo nghiệm">
                                            Cơ sở Khảo nghiệm
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark d-flex justify-content-between align-items-center" data-bs-toggle="collapse" href="#collapseDanhMucTA" role="button" aria-expanded="false">
                                <span>
                                    <i class="fas fa-list-alt me-2"></i>Thức ăn
                                </span>
                                <i class="fas fa-chevron-down" style="font-size: 0.8rem;"></i>
                            </a>

                            <div class="collapse" id="collapseDanhMucTA">
                                <ul class="nav flex-column ms-4">
                                    <li class="nav-item">
                                        <a class="nav-link text-secondary py-1" asp-controller="HoaChatCam" asp-action="Index">
                                            <i class="fas fa-skull me-1 text-danger"></i> Hóa chất cấm
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-secondary py-1" asp-controller="NguyenLieuChoPhep" asp-action="Index">
                                            <i class="fas fa-check me-1 text-success"></i> Nguyên liệu cho phép
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </li>

                    </ul>

                    <h6 class="sidebar-heading d-flex justify-content-between align-items-center px-3 mt-4 mb-1 text-muted">
                        <span>Báo cáo & Thống kê</span>
                    </h6>
                    <ul class="nav flex-column mb-2">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="BaoCao" asp-action="Index">
                                <i class="fa-solid fa-chart-line"></i> Báo cáo tổng hợp
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>

            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                @RenderBody()
            </main>

        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>