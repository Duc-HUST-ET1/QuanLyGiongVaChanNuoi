@model IEnumerable<QuanLyGiongChanNuoi.Infrastructure.Models.DonViHc>
    @{ ViewData["Title"] = "Quản lý Cấp Huyện"; }

    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h3 class="text-primary fw-bold"><i class="bi bi-building"></i> Danh Mục Đơn Vị Hành Chính Cấp Huyện</h3>
            <a asp-action="Create" class="btn btn-primary shadow-sm"><i class="bi bi-plus-lg"></i> Thêm Mới</a>
        </div>

        @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
        @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

        <div class="card mb-4 bg-light border-0">
            <div class="card-body">
                <form asp-action="Index" method="get">
                    <div class="input-group">
                        <input type="text" name="searchString" class="form-control"
                               placeholder="Nhập tên huyện hoặc mã bưu điện..." value="@ViewData["CurrentFilter"]">
                        <button class="btn btn-primary" type="submit"><i class="bi bi-search"></i> Tìm kiếm</button>
                        @if (!string.IsNullOrEmpty(ViewData["CurrentFilter"] as string))
                    {
                        <a asp-action="Index" class="btn btn-outline-secondary">Xóa lọc</a>
                    }
                    </div>
                </form>
            </div>
        </div>

        <div class="card shadow border-0">
            <div class="card-body p-0">
                <table class="table table-hover table-striped mb-0 align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th class="ps-3">Tên Đơn Vị</th>
                            <th>Loại (Cấp)</th>
                            <th>Trực Thuộc (Tỉnh/TP)</th>
                            <th>Mã Bưu Điện</th>
                            <th class="text-center">Thao Tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                    {
                        <tr>
                            <td class="ps-3 fw-bold text-primary">@item.Ten</td>
                            <td><span class="badge bg-info text-dark">@item.CapHc?.Ten</span></td>
                            <td>@item.TrucThuocNavigation?.Ten</td>
                            <td>@item.MaBuuDien</td>
                            <td class="text-center">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm text-white"><i class="bi bi-pencil-square"></i></a>
                                <form asp-action="Delete" asp-route-id="@item.Id" method="post" style="display:inline-block"
                                      onsubmit="return confirm('Bạn có chắc chắn muốn xóa @item.Ten không?');">
                                    <button type="submit" class="btn btn-danger btn-sm"><i class="bi bi-trash"></i></button>
                                </form>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
