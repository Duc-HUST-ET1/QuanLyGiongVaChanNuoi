@model QuanLyGiongChanNuoi.Infrastructure.Models.DonViHc
@{ ViewData["Title"] = "Thêm Mới Huyện"; }

<div class="container mt-4">
    <div class="card shadow col-md-8 mx-auto">
        <div class="card-header bg-primary text-white">
            <h4><i class="bi bi-plus-circle"></i> Thêm Mới Đơn Vị Cấp Huyện</h4>
        </div>
        <div class="card-body">
            <form asp-action="Create">
                <div class="mb-3">
                    <label class="form-label fw-bold">Tên Đơn Vị (*)</label>
                    <input asp-for="Ten" class="form-control" required placeholder="VD: Huyện Ba Vì" />
                </div>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">Loại Đơn Vị (*)</label>
                        <select asp-for="CapHcId" class="form-select" asp-items="ViewBag.CapHcId" required></select>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">Trực Thuộc Tỉnh/TP (*)</label>
                        <select asp-for="TrucThuoc" class="form-select" asp-items="ViewBag.TrucThuoc" required>
                            <option value="">-- Chọn Tỉnh/TP --</option>
                        </select>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label fw-bold">Mã Bưu Điện</label>
                    <input asp-for="MaBuuDien" class="form-control" />
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-success"><i class="bi bi-save"></i> Lưu Lại</button>
                    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
                </div>
            </form>
        </div>
    </div>
</div>