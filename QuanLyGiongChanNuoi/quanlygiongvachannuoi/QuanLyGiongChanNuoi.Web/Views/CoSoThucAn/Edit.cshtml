@model QuanLyGiongChanNuoi.Infrastructure.Models.CoSoThucAn
@{ ViewData["Title"] = "Cập nhật"; }

<div class="container mt-4">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Cập nhật Cơ sở: @Model.LoaiCoSo</h5>
        </div>
        <div class="card-body">
            <form asp-action="Edit" class="row">
                <div asp-validation-summary="All" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="LoaiCoSo" />

                <div class="col-md-12 mb-3">
                    <label class="fw-bold">Tên cơ sở (*)</label>
                    <input asp-for="TenCoSo" class="form-control" />
                </div>

                <div class="col-md-6 mb-3">
                    <label class="fw-bold">Chủ sở hữu</label>
                    <select asp-for="ToChucCaNhanId" class="form-control" asp-items="ViewBag.ToChucCaNhanId"></select>
                </div>

                <div class="col-md-6 mb-3">
                    <label class="fw-bold">Sản phẩm chính</label>
                    <select asp-for="ThucAnChanNuoiId" class="form-control" asp-items="ViewBag.ThucAnChanNuoiId"></select>
                </div>

                <div class="col-md-12 mb-3">
                    <label class="fw-bold">Địa chỉ</label>
                    <input asp-for="DiaChi" class="form-control" />
                </div>

                <div class="col-12 d-flex justify-content-between">
                    <a asp-action="Index" asp-route-loaiHinh="@Model.LoaiCoSo" class="btn btn-secondary">Quay lại</a>
                    <div>
                        <button type="submit" class="btn btn-primary me-2">Lưu thay đổi</button>
                        <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">Xóa bỏ</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">Xác nhận xóa</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                Bạn có chắc chắn muốn xóa cơ sở <strong>@Model.TenCoSo</strong> không?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                <form asp-action="Delete" method="post">
                    <input type="hidden" name="id" value="@Model.Id" />
                    <button type="submit" class="btn btn-danger">Xóa ngay</button>
                </form>
            </div>
        </div>
    </div>
</div>