@model QuanLyGiongChanNuoi.Infrastructure.Models.CoSoThucAn
@{
    string loai = ViewBag.LoaiHinh;
    ViewData["Title"] = "Thêm mới " + loai;
}

<h4>Thêm mới Cơ sở: <span class="text-primary">@loai</span></h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="LoaiCoSo" value="@loai" />

            <div class="form-group mb-3">
                <label class="fw-bold">Tên cơ sở (*)</label>
                <input asp-for="TenCoSo" class="form-control" />
            </div>

            <div class="form-group mb-3">
                <label class="fw-bold">Chủ sở hữu (Tổ chức/Cá nhân)</label>
                <select asp-for="ToChucCaNhanId" class="form-control" asp-items="ViewBag.ToChucCaNhanId"></select>
            </div>

            <div class="form-group mb-3">
                <label class="fw-bold">Sản phẩm chính / Loại thức ăn</label>
                <select asp-for="ThucAnChanNuoiId" class="form-control" asp-items="ViewBag.ThucAnChanNuoiId"></select>
            </div>

            <div class="form-group mb-3">
                <label class="fw-bold">Địa chỉ</label>
                <input asp-for="DiaChi" class="form-control" />
            </div>

            <button type="submit" class="btn btn-primary">Lưu dữ liệu</button>
            <a asp-action="Index" asp-route-loaiHinh="@loai" class="btn btn-secondary">Quay lại</a>
        </form>
    </div>
</div>