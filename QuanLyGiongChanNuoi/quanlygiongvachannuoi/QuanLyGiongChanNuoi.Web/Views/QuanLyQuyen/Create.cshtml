@model QuanLyGiongChanNuoi.Infrastructure.Models.PhanQuyen
@{ ViewData["Title"] = "Thêm Quyền Mới"; }

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4><i class="fa-solid fa-plus-circle"></i> Thêm Quyền Mới</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Mã Quyền (Viết liền, không dấu) (*)</label>
                            <input asp-for="MaQuyen" class="form-control" placeholder="VD: USER_VIEW, EXPORT_EXCEL..." required />
                            <span asp-validation-for="MaQuyen" class="text-danger"></span>
                            <small class="text-muted">Mã này sẽ tự động viết hoa khi lưu. Không được trùng.</small>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Tên Hiển Thị (*)</label>
                            <input asp-for="TenQuyen" class="form-control" placeholder="VD: Xem danh sách người dùng" required />
                            <span asp-validation-for="TenQuyen" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Mô Tả</label>
                            <textarea asp-for="Mota" class="form-control" rows="3"></textarea>
                        </div>

                        <div class="text-center mt-3">
                            <button type="submit" class="btn btn-success"><i class="fa-solid fa-save"></i> Lưu Lại</button>
                            <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>