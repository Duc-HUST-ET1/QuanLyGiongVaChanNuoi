@model IEnumerable<QuanLyGiongChanNuoi.Infrastructure.Models.NguoiDung>

    @{
    ViewData["Title"] = "Quản lý Người dùng";
    }

    <div class="container-fluid mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="text-primary fw-bold">
                <i class="bi bi-people-fill"></i> Quản lý Người Dùng
            </h2>
            <a asp-action="Create" class="btn btn-success shadow-sm">
                <i class="bi bi-person-plus-fill"></i> Thêm người dùng mới
            </a>
        </div>

        <div class="card mb-4 shadow-sm border-0 bg-light">
            <div class="card-body py-3">
                <form asp-action="Index" method="get">
                    <div class="input-group">
                        <span class="input-group-text bg-white border-end-0">
                            <i class="bi bi-search text-muted"></i>
                        </span>
                        <input type="text" name="searchString" class="form-control border-start-0"
                               placeholder="Nhập tên đăng nhập, họ tên hoặc email để tìm..."
                               value="@ViewData["CurrentFilter"]">

                        <button class="btn btn-primary" type="submit">Tìm kiếm</button>

                        @if (!string.IsNullOrEmpty(ViewData["CurrentFilter"] as string))
                    {
                        <a asp-action="Index" class="btn btn-outline-secondary">Xóa lọc</a>
                    }
                    </div>
                </form>
            </div>
        </div>

        @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

        <div class="card shadow border-0">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover table-striped align-middle mb-0">
                        <thead class="table-dark text-nowrap">
                            <tr>
                                <th class="py-3 ps-3">Họ và Tên</th>
                                <th class="py-3">Tài khoản</th>
                                <th class="py-3">Chức Vụ</th>
                                <th class="py-3">Đơn Vị HC</th>
                                <th class="py-3 text-center">Trạng Thái</th>
                                <th class="py-3 text-center" style="min-width: 220px;">Thao Tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Any())
                        {
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td class="ps-3 fw-bold text-primary">@item.HoTen</td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="bg-light rounded-circle d-flex justify-content-center align-items-center me-2" style="width:35px; height:35px;">
                                            <i class="bi bi-person text-secondary"></i>
                                        </div>
                                        <div>
                                            <span>@item.TenDn</span><br />
                                            <small class="text-muted fst-italic" style="font-size: 0.8rem">@item.Email</small>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    @if (item.ChucVu != null && item.ChucVu.TenChucVu == "Quản trị viên")
                                        {
                                    <span class="badge bg-danger rounded-pill px-3 py-2">
                                        <i class="bi bi-shield-lock-fill"></i> ADMIN
                                    </span>
                                        }
                                        else
                                        {
                                    <span class="badge bg-info text-dark rounded-pill px-3 py-2">
                                        @(item.ChucVu?.TenChucVu ?? "N/A")
                                    </span>
                                        }
                                </td>
                                <td>
                                    @if (item.DonViHc != null)
                                        {
                                    <span><i class="bi bi-geo-alt-fill text-danger"></i> @item.DonViHc.Ten</span>
                                        }
                                        else
                                        {
                                    <span class="text-muted">-</span>
                                        }
                                </td>

                                <td class="text-center">
                                    <form asp-action="ToggleStatus" asp-route-id="@item.Id" method="post">
                                        @if (item.TrangThai == true)
                                            {
                                        <button type="submit" class="btn badge bg-success border-0 py-2 px-3"
                                                title="Bấm để KHÓA tài khoản này"
                                                onclick="return confirm('Bạn có muốn KHÓA tài khoản @item.TenDn không?');">
                                            <i class="bi bi-unlock-fill me-1"></i> Hoạt động
                                        </button>
                                            }
                                            else
                                            {
                                        <button type="submit" class="btn badge bg-secondary border-0 py-2 px-3"
                                                title="Bấm để MỞ KHÓA tài khoản này"
                                                onclick="return confirm('Bạn có muốn MỞ KHÓA tài khoản @item.TenDn không?');">
                                            <i class="bi bi-lock-fill me-1"></i> Đang khóa
                                        </button>
                                            }
                                    </form>
                                </td>

                                <td class="text-center">
                                    <div class="d-flex justify-content-center gap-2">

                                        <a asp-controller="PhanQuyen" asp-action="PhanQuyenChoNguoiDung" asp-route-nguoiDungId="@item.Id"
                                           class="btn btn-success btn-sm text-white shadow-sm"
                                           title="Cấp quyền riêng cho cá nhân này"
                                           style="width: 32px; height: 32px; display: flex; align-items: center; justify-content: center;">
                                            <i class="bi bi-shield-lock-fill"></i>
                                        </a>

                                        <a asp-controller="PhanQuyen" asp-action="TraCuuQuyenUser" asp-route-userId="@item.Id"
                                           class="btn btn-info btn-sm text-white shadow-sm"
                                           title="Xem tổng hợp quyền hạn của người này"
                                           style="width: 32px; height: 32px; display: flex; align-items: center; justify-content: center;">
                                            <i class="bi bi-search"></i>
                                        </a>

                                        <a asp-action="Edit" asp-route-id="@item.Id"
                                           class="btn btn-warning btn-sm text-white shadow-sm"
                                           title="Chỉnh sửa thông tin"
                                           style="width: 32px; height: 32px; display: flex; align-items: center; justify-content: center;">
                                            <i class="bi bi-pencil-square"></i>
                                        </a>

                                        <form asp-action="Delete" asp-route-id="@item.Id" method="post"
                                              style="margin: 0;"
                                              onsubmit="return confirm('CẢNH BÁO: Xóa tài khoản này là vĩnh viễn!\nBạn có chắc chắn muốn xóa @item.TenDn không?');">
                                            <button type="submit"
                                                    class="btn btn-danger btn-sm shadow-sm"
                                                    title="Xóa vĩnh viễn"
                                                    style="width: 32px; height: 32px; display: flex; align-items: center; justify-content: center;">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="text-center py-5 text-muted">
                                    <i class="bi bi-inbox fs-1 d-block mb-3"></i>
                                    Không tìm thấy người dùng nào phù hợp.
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="card-footer bg-white py-3">
                <small class="text-muted">Tổng số: <b>@(Model?.Count() ?? 0)</b> người dùng</small>
            </div>
        </div>
    </div>
