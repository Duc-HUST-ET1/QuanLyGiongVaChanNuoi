@model QuanLyGiongChanNuoi.Infrastructure.Models.NguoiDung

@{ ViewData["Title"] = "Chỉnh sửa người dùng"; }

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-warning text-dark">
            <h4><i class="bi bi-pencil-square"></i> Cập Nhật Thông Tin: <b>@Model.TenDn</b></h4>
        </div>
        <div class="card-body">
            <form asp-action="Edit">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="TenDn" /> <input type="hidden" asp-for="TrangThai" />

                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label text-muted">Tên đăng nhập (Không thể sửa)</label>
                            <input asp-for="TenDn" class="form-control bg-light" readonly />
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Mật khẩu Mới</label>
                            <input type="password" name="NewPassword" class="form-control" placeholder="Để trống nếu không muốn đổi pass" />
                            <small class="text-muted">Chỉ nhập vào đây nếu bạn muốn đổi mật khẩu.</small>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Họ và Tên</label>
                            <input asp-for="HoTen" class="form-control" />
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Email</label>
                            <input asp-for="Email" class="form-control" />
                        </div>
                        <div class="form-group mb-3">
                            <label class="fw-bold">Chức vụ</label>
                            <select asp-for="ChucVuId" class="form-control" asp-items="ViewBag.ChucVuId">
                                <option value="">-- Chọn chức vụ --</option>
                            </select>
                            <span asp-validation-for="ChucVuId" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-bold">Đơn vị hành chính</label>
                            <select asp-for="DonViHcId" class="form-select" asp-items="ViewBag.DonViHcId">
                                <option value="">-- Không thuộc đơn vị nào --</option>
                            </select>
                        </div>
                    </div>
                </div>

                <div class="mt-3 text-center">
                    <button type="submit" class="btn btn-warning"><i class="bi bi-save"></i> Cập Nhật</button>
                    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
                </div>
            </form>
        </div>
    </div>
</div>