@model QuanLyGiongChanNuoi.Infrastructure.Models.NguoiDung

@{ ViewData["Title"] = "Thêm người dùng mới"; }

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-success text-white">
            <h4><i class="bi bi-person-plus"></i> Thêm Người Dùng Mới</h4>
        </div>
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Tên đăng nhập (*)</label>
                            <input asp-for="TenDn" class="form-control" required />
                            <span asp-validation-for="TenDn" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-bold">Mật khẩu (*)</label>
                            <input asp-for="MatKhau" type="password" class="form-control" required />
                            <span asp-validation-for="MatKhau" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-bold">Họ và Tên</label>
                            <input asp-for="HoTen" class="form-control" />
                            <span asp-validation-for="HoTen" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Email</label>
                            <input asp-for="Email" type="email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-bold">Chức vụ</label>
                            <select asp-for="ChucVuId" class="form-select" asp-items="ViewBag.ChucVuId"></select>
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-bold">Đơn vị hành chính</label>
                            <select asp-for="DonViHcId" class="form-select" asp-items="ViewBag.DonViHcId">
                                <option value="">-- Không thuộc đơn vị nào --</option>
                            </select>
                        </div>
                    </div>
                </div>

                <div class="mt-3 text-center">
                    <button type="submit" class="btn btn-success"><i class="bi bi-save"></i> Lưu lại</button>
                    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
                </div>
            </form>
        </div>
    </div>
</div>