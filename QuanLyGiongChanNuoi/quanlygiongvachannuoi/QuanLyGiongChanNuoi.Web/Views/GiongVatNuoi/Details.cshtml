@{
    ViewData["Title"] = "Chi Tiết Giống Vật Nuôi";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow">
                <div class="card-header bg-info text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-info-circle"></i> Chi Tiết Giống Vật Nuôi
                    </h4>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">ID:</dt>
                        <dd class="col-sm-9">@ViewBag.Id</dd>

                        <dt class="col-sm-3">Tên Giống:</dt>
                        <dd class="col-sm-9"><strong class="text-primary">@ViewBag.TenGiong</strong></dd>

                        <dt class="col-sm-3">Loại:</dt>
                        <dd class="col-sm-9">
                            <span class="badge bg-info fs-6">@ViewBag.Loai</span>
                        </dd>

                        <dt class="col-sm-3">Mô Tả:</dt>
                        <dd class="col-sm-9">
                            @if (!string.IsNullOrEmpty(ViewBag.MoTa))
                            {
                            <p>@ViewBag.MoTa</p>
                            }
                            else
                            {
                            <em class="text-muted">Không có mô tả</em>
                            }
                        </dd>
                    </dl>

                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Quay lại
                        </a>
                        <div>
                            <a asp-action="Edit" asp-route-id="@ViewBag.Id" class="btn btn-warning me-2">
                                <i class="bi bi-pencil"></i> Sửa
                            </a>
                            <a asp-action="Delete" asp-route-id="@ViewBag.Id" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Xóa
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>