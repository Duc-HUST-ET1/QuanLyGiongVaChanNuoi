@model IEnumerable<dynamic>

@{
    ViewData["Title"] = "Quản lý Giống Vật Nuôi";
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-md-12">
            <h2 class="text-primary">
                <i class="bi bi-bezier2"></i> Quản lý Giống Vật Nuôi
            </h2>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <div class="row">
                <div class="col-md-6">
                    <h5 class="mb-0"><i class="bi bi-list-ul"></i> Danh Sách Giống</h5>
                </div>
                <div class="col-md-6 text-end">
                    <a asp-action="Create" class="btn btn-light btn-sm">
                        <i class="bi bi-plus-circle"></i> Thêm Giống Mới
                    </a>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover table-striped">
                    <thead class="table-dark">
                        <tr>
                            <th>STT</th>
                            <th>Tên Giống</th>
                            <th>Loại</th>
                            <th>Mô Tả</th>
                            <th class="text-center">Thao Tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            int stt = 1;
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@stt</td>
                                    <td><strong>@item.TenGiong</strong></td>
                                    <td>
                                        <span class="badge bg-info">@item.Loai</span>
                                    </td>
                                    <td>@(item.MoTa ?? "Không có mô tả")</td>
                                    <td class="text-center">
                                        <div class="btn-group" role="group">
                                            <a asp-action="Details" asp-route-id="@item.Id"
                                               class="btn btn-sm btn-info" title="Chi tiết">
                                                <i class="bi bi-eye"></i>
                                            </a>

                                            <a asp-action="Edit" asp-route-id="@item.Id"
                                               class="btn btn-sm btn-warning" title="Sửa">
                                                <i class="bi bi-pencil"></i>
                                            </a>

                                            @if (User.IsInRole("Quản trị viên"))
        {
                                            <a asp-action="Delete" asp-route-id="@item.Id"
                                               class="btn btn-sm btn-danger" title="Xóa">
                                                <i class="bi bi-trash"></i>
                                            </a>
        }
                                        </div>
                                    </td>
                                </tr>
                                stt++;
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="text-center text-muted">
                                    <i class="bi bi-inbox"></i> Chưa có dữ liệu giống vật nuôi
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>