@model IEnumerable<QuanLyGiongChanNuoi.Infrastructure.Models.GiongCanBaoTon>

    @{ ViewData["Title"] = "Giống cần bảo tồn"; }

    <div class="container-fluid mt-4">
        <h2 class="text-success"><i class="fas fa-leaf"></i> Danh mục Giống cần Bảo tồn</h2>

        <div class="card mb-3 mt-3">
            <div class="card-body">
                <form asp-action="Index" method="get" class="row g-2">
                    <div class="col-md-9">
                        <input type="text" name="searchString" class="form-control"
                               placeholder="Nhập tên giống vật nuôi..." value="@ViewBag.CurrentFilter" />
                    </div>
                    <div class="col-md-3">
                        <button type="submit" class="btn btn-primary w-100">Tìm kiếm</button>
                    </div>
                </form>
            </div>
        </div>

        <p><a asp-action="Create" class="btn btn-success">Thêm mới</a></p>

        <table class="table table-bordered table-striped">
            <thead class="table-dark">
                <tr>
                    <th>Tên Giống</th>
                    <th>Lý do bảo tồn</th>
                    <th>Ngày bắt đầu</th>
                    <th>Trạng thái</th>
                    <th>Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model) {
                <tr>
                    <td class="fw-bold">@item.GiongVatNuoi?.TenGiong</td>
                    <td>@item.LyDo</td>
                    <td>@item.NgayBaoTon?.ToString("dd/MM/yyyy")</td>
                    <td>
                        @if(item.TrangThai == true) { <span class="badge bg-success">Đang bảo tồn</span> }
                        else { <span class="badge bg-secondary">Ngừng theo dõi</span> }
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Sửa</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
