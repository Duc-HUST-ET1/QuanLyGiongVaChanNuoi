@model QuanLyGiongChanNuoi.Infrastructure.Models.ToChucNguonGen

@{
    string loai = ViewBag.LoaiHoatDong;
    ViewData["Title"] = "Thêm mới " + loai;
}

<h4>Thêm mới hoạt động: <span class="text-primary">@loai</span></h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="All" class="text-danger"></div>

            <input type="hidden" asp-for="HoatDong" value="@loai" />

            <div class="form-group mb-3">
                <label class="fw-bold">Tổ chức / Cá nhân thực hiện (*)</label>
                <select asp-for="ToChucCaNhanId" class="form-control" asp-items="ViewBag.ToChucCaNhanId"></select>
            </div>

            <div class="form-group mb-3">
                <label class="fw-bold">Nguồn gen giống vật nuôi (*)</label>
                <select asp-for="NguonGenId" class="form-control" asp-items="ViewBag.NguonGenId"></select>
            </div>

            <div class="form-group mb-3">
                <label class="fw-bold">Khu vực</label>
                <input asp-for="KhuVuc" class="form-control" />
            </div>

            <div class="form-group mb-3">
                <label class="fw-bold">Ngày thực hiện</label>
                <input asp-for="NgayThuThap" class="form-control" type="date" />
            </div>

            <button type="submit" class="btn btn-primary">Lưu dữ liệu</button>
            <a asp-action="Index" asp-route-loaiHoatDong="@loai" class="btn btn-secondary">Quay lại</a>
        </form>
    </div>
</div>