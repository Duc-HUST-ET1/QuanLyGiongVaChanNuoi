@model QuanLyGiongChanNuoi.Infrastructure.Models.NguyenLieuChoPhep
@{ ViewData["Title"] = "Thêm nguyên liệu"; }
<h4>Thêm mới Nguyên liệu</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div class="mb-3">
                <label class="fw-bold">Tên nguyên liệu (*)</label>
                <input asp-for="TenNguyenLieu" class="form-control" />
                <span asp-validation-for="TenNguyenLieu" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="fw-bold">Mô tả</label>
                <textarea asp-for="MoTa" class="form-control" rows="3"></textarea>
            </div>
            <button type="submit" class="btn btn-success">Lưu lại</button>
            <a asp-action="Index" class="btn btn-secondary">Hủy</a>
        </form>
    </div>
</div>