@model IEnumerable<QuanLyGiongChanNuoi.Infrastructure.Models.NguyenLieuChoPhep>
    @{ ViewData["Title"] = "Nguyên liệu cho phép"; }

    <div class="container mt-4">
        <h3 class="text-success"><i class="fas fa-check-circle"></i> Danh mục Nguyên liệu Cho phép</h3>

        <div class="card my-3">
            <div class="card-body">
                <form asp-action="Index" method="get" class="row g-2">
                    <div class="col-md-10">
                        <input type="text" name="searchString" class="form-control"
                               placeholder="Tìm tên nguyên liệu..." value="@ViewBag.CurrentFilter" />
                    </div>
                    <div class="col-md-2">
                        <button type="submit" class="btn btn-success w-100">
                            <i class="fas fa-search"></i> Tìm kiếm
                        </button>
                    </div>
                </form>
            </div>
        </div>
        <p><a asp-action="Create" class="btn btn-outline-success">Thêm nguyên liệu mới</a></p>

        <table class="table table-bordered table-hover">
            <thead class="bg-success text-white">
                <tr>
                    <th>Tên Nguyên liệu</th>
                    <th>Mô tả / Thành phần</th>
                    <th width="150">Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model) {
                <tr>
                    <td class="fw-bold">@item.TenNguyenLieu</td>
                    <td>@item.MoTa</td>
                    <td><a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Sửa</a></td>
                </tr>
            }
            </tbody>
        </table>
    </div>
