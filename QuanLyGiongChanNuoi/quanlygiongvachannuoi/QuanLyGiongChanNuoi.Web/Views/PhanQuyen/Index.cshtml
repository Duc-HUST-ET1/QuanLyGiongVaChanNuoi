@model IEnumerable<QuanLyGiongChanNuoi.Infrastructure.Models.PhanQuyen>
    @{ ViewData["Title"] = "Danh mục Quyền"; }

    <div class="container mt-4">
        <h3><i class="bi bi-shield-check"></i> Quản lý Định nghĩa Quyền</h3>
        <a asp-action="Create" class="btn btn-primary mb-3">Thêm Quyền Mới</a>

        <table class="table table-bordered">
            <thead class="table-light">
                <tr>
                    <th>Mã Quyền</th>
                    <th>Tên Quyền</th>
                    <th>Mô Tả</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model) {
                <tr>
                    <td><code>@item.MaQuyen</code></td>
                    <td>@item.TenQuyen</td>
                    <td>@item.Mota</td>
                </tr>
            }
            </tbody>
        </table>
    </div>
